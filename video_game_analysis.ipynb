ðŸ”¥ OPTION 2: 3D Surface Plot (Genre vs Platform vs Sales)
import plotly.graph_objects as go
import numpy as np

pivot = merged.pivot_table(
    values='Global_Sales',
    index='Genre',
    columns='Platform',
    aggfunc='sum'
).fillna(0)

fig = go.Figure(data=[
    go.Surface(
        z=pivot.values
    )
])

fig.update_layout(
    title='3D Surface: Genre vs Platform vs Sales',
    scene=dict(
        xaxis_title='Platform',
        yaxis_title='Genre',
        zaxis_title='Global Sales'
    )
)

fig.show()

